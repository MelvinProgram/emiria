---
// Products section
const products = [
  {
    name: "Shampoo Reparador",
    description: "Limpia suavemente y fortalece el cabello dañado.",
    price: "24,99 €",
    image: "/images/emiria-envases-collage.jpg",
    badge: "Más vendido",
  },
  {
    name: "Tratamiento Nutritivo",
    description: "Repara en profundidad y devuelve el brillo natural.",
    price: "29,99 €",
    image: "/images/emiria-envases-collage.jpg",
    badge: "Nuevo",
  },
];
---
<section id="productos" class="py-20">
  <div class="mx-auto max-w-7xl px-4">

    <!-- Título -->
    <div class="mb-12 text-center">
      <p class="text-xs uppercase tracking-wide text-[#9B9B7E] mb-2">
        Nuestros productos
      </p>
      <h2 class="font-serif text-3xl md:text-4xl">
        Una rutina simple, resultados reales
      </h2>
    </div>

    <!-- Productos -->
    <div class="grid gap-8 md:grid-cols-2">
      {products.map((product) => (
        <article class="rounded-3xl bg-white p-6 md:p-8 shadow-sm">
          <div class="relative mb-6 overflow-hidden rounded-2xl bg-[#f2f1ee]">
            {product.badge && (
              <span class="absolute left-4 top-4 rounded-full bg-[#9B9B7E] px-3 py-1 text-xs text-white">
                {product.badge}
              </span>
            )}
            <img
              src={product.image}
              alt={product.name}
              class="aspect-4/5 w-full object-cover"
              loading="lazy"
            />
          </div>

          <h3 class="font-serif text-xl mb-2">
            {product.name}
          </h3>

          <p class="mb-4 text-sm opacity-80">
            {product.description}
          </p>

          <div class="mb-6 text-lg font-medium">
            {product.price}
          </div>

          <a
            href="#"
            class="inline-flex w-full items-center justify-center rounded-full bg-[#9B9B7E] px-6 py-3 text-sm text-white transition hover:opacity-90"
          >
            Comprar ahora
          </a>
        </article>
      ))}
    </div>

  </div>
</section>
