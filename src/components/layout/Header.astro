---
// src/components/layout/Header.astro
const navLinks = [
  { label: "Productos", href: "#productos" },
  { label: "Ingredientes", href: "#ingredientes" },
  { label: "Cómo se usa", href: "#uso" },
  { label: "Antes y después", href: "#before-after" },
  { label: "Opiniones", href: "#reviews" },
  // { label: "FAQ", href: "#faq" },
  // { label: "Contacto", href: "#contacto" },
  // { label: "Blog", href: "/blog" },
  // { label: "Sobre nosotros", href: "/about" },
  // { label: "Política de privacidad", href: "/privacy-policy" },
  // { label: "Términos y condiciones", href: "/terms-and-conditions" },
  // { label: "Envío y devoluciones", href: "/shipping-and-returns" },
];
---
<header class="sticky top-0 z-50 bg-[#f8f6f3]/90 backdrop-blur border-b border-black/5">
  <div class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="font-serif text-lg tracking-wide">
      <img 
        src="/images/logo-1.svg" 
        alt="Logo Emiria"
        class="h-15 w-auto object-cover"
        width="656" height="635"
      />
    </a>

    <!-- Nav desktop -->
      <nav class="hidden md:flex items-center gap-8 text-sm">
        {navLinks.map(link => (
          <a href={link.href} class="opacity-80 hover:opacity-100">
            {link.label}
          </a>
        ))}
      </nav>

    <!-- Nav desktop 
    <nav class="hidden md:flex items-center gap-6 text-sm">
      <a href="#beneficios" class="hover:opacity-70">Beneficios</a>
      <a href="#productos" class="hover:opacity-70">Productos</a>
      <a href="#resultados" class="hover:opacity-70">Resultados</a>
      <a href="#faq" class="hover:opacity-70">FAQ</a>
    </nav>-->

    <!-- CTA -->
    <a
      href="#productos"
      class="inline-flex items-center rounded-full bg-[#9B9B7E] px-4 py-2 text-sm text-white hover:opacity-90 transition"
    >
      Comprar ahora
    </a>
  </div>
</header>
