---
// src/components/layout/Header.astro
---
<header class="sticky top-0 z-50 bg-[#f8f6f3]/90 backdrop-blur border-b border-black/5">
  <div class="mx-auto max-w-7xl px-4 py-3 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="font-serif text-lg tracking-wide">
      <img 
        src="/images/logo-1.svg" 
        alt="Logo Emiria"
        class="h-15 w-auto object-cover">
    </a>

    <!-- Nav desktop -->
    <nav class="hidden md:flex items-center gap-6 text-sm">
      <a href="#beneficios" class="hover:opacity-70">Beneficios</a>
      <a href="#productos" class="hover:opacity-70">Productos</a>
      <a href="#resultados" class="hover:opacity-70">Resultados</a>
      <a href="#faq" class="hover:opacity-70">FAQ</a>
    </nav>

    <!-- CTA -->
    <a
      href="#productos"
      class="inline-flex items-center rounded-full bg-[#9B9B7E] px-4 py-2 text-sm text-white hover:opacity-90 transition"
    >
      Comprar ahora
    </a>
  </div>
</header>
