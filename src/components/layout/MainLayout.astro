---
// src/components/layout/MainLayout.astro
import Header from "./Header.astro";
import Footer from "./Footer.astro";
const siteTitle = "Emiria - Cosmética capilar premium";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Productos de cosmética capilar premium con ingredientes naturales. Rutina sencilla, resultados visibles." />

    <!-- Open Graph -->
    <meta property="og:title" content="Emiria — Cosmética capilar premium" />
    <meta property="og:description" content="Cuida tu cabello con fórmulas limpias y eficaces." />
    <meta property="og:type" content="website" />
    <title>{siteTitle}</title>
    <!-- favicon -->
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <slot name="head" />

  </head>
  <body class="bg-[#f8f6f3] text-[#2C2C2C] font-antialiased leading-normal">
    <Header />
    <main class="min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>
